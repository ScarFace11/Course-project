<Page x:Class="Котельня.Pages.PageWorkEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Котельня.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageWorkEdit">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" >
                <Label  Content="Название категории работы" />
                <TextBox  Width="100"  Text="{Binding name}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <Button  Width="80" Height="30" Content="Сохранить" Click="btnSave_Click" Margin="0,0,30,0" />
                <Button  Width="80" Height="30" Content="Отмена" Click="btnBack_Click" />
            </StackPanel>
        </StackPanel>
        

        
    </Grid>
</Page>
